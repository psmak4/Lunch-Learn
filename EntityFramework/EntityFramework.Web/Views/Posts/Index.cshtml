@model IEnumerable<EntityFramework.Web.Models.Post>

@{
    ViewBag.Title = "Home";
}

@foreach (var post in Model)
{
	<div class="blog-post">
		<h2 class="blog-post-title">@post.Title</h2>
		<p class="blog-post-meta">
			@post.Date.ToShortDateString()
			@if (post.Tags.Any())
			{
				<br />
				<span class="small text-muted">
					tags: @string.Join(", ", post.Tags.Select(t => t.Name.ToLower()))
				</span>
			}
		</p>
		@Html.Raw(post.Content)
	</div>
}
